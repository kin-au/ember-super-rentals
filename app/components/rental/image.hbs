{{!-- "on" is a modifier, attaching toggleSize as a click handler --}}
  <button type="button" class="image {{if this.isLarge "large"}}" {{on "click" this.toggleSize}}>
  {{!-- ...attributes allows us to pass in any html attribute to the element when invoking the component --}}
  {{!-- a bit like output/yield but for html attributes --}}
    <img ...attributes>
    <small>View {{if this.isLarge "Smaller" "Larger"}}</small>
  </button>